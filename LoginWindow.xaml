<Window x:Class="AppCRM.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion" Height="200" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="223*"/>
            <ColumnDefinition Width="77*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Email : " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="53,14,0,0" Width="48" RenderTransformOrigin="0.74,0.522"/>
        <TextBox x:Name="txtEmailLogin" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="99,18,0,0" Width="191" Grid.ColumnSpan="2"/>

        <Label Content="Mot de passe :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <PasswordBox x:Name="txtMdp" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="99,54,0,0" Grid.ColumnSpan="2" Width="191"/>

        <Button x:Name="btnLogin" Content="Se connecter" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="114,102,0,0" Click="btnLogin_Click"/>
    </Grid>
</Window>
